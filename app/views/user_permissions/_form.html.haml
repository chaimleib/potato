= form_for @user_permission do |f|
  - if @user_permission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_permission.errors.count, "error")} prohibited this user_permission from being saved:"
      %ul
        - @user_permission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.collection_select :user_id, User.all, :id, :human_email
  .field
    = f.label :is_admin
    = f.check_box :is_admin
  .actions
    = f.submit 'Save'
