- user = @user_permission.user
= form_for @user_permission do |f|
  .container-fluid
    - if @user_permission.errors.any?
      .row#error-explanation
        %h3= "#{pluralize(@user_permission.errors.count, "error")} prohibited this user_permission from being saved:"
        %ul
          - @user_permission.errors.full_messages.each do |msg|
            %li= msg
    .row.form-group
      .col-sm-2.field= f.label :user
      .col-sm-10
        %input.form-control{type: 'text', disabled: 'disabled', 
          value: user.human_email}
        = hidden_field_tag :user_id, user.id
    .row.form-group
      .col-sm-2.field= f.label :is_admin
      .col-sm-10= f.check_box :is_admin
    .row.form-buttons.actions.input-group= f.submit 'Save'
