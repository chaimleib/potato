#selection_form_container
  %form{:name => 'selectionform', :id => 'selectionform', 
  :action => '', :method => 'post'}
    %table
      %tbody
        %tr
          %td
            %label{:for => 'user'} Username:
            %input{:type => 'text', :name => 'user'}
#overview
  %table
    %thead
      %tr
        %th Version
        %th Tasks
        %th Due
    %tbody
      - @context[:overview_table_rows].each do |version|
        %tr{class: (['strong', 'red'] if version == 'Unversioned')}
          %td= version
          %td= @context[:overview_table_data][version][:tasks].to_s
          %td= @context[:overview_table_data][version][:time] || 'N/A'
                
